{
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit"
  },

  "biome.enabled": true,
  "eslint.enable": false,
  "prettier.enable": false,

  // Monorepo 최적화
  "typescript.tsserver.experimental.enableProjectDiagnostics": true
}
