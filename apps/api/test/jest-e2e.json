{
	"moduleFileExtensions": ["js", "json", "ts"],
	"rootDir": ".",
	"roots": ["<rootDir>/e2e"],
	"testEnvironment": "node",
	"testRegex": ".e2e-spec.ts$",
	"setupFiles": ["<rootDir>/setup-env.ts"],
	"testTimeout": 60000,
	"maxWorkers": 1,
	"transform": {
		"^.+\\.(t|j)s$": [
			"@swc/jest",
			{
				"jsc": {
					"parser": {
						"syntax": "typescript",
						"decorators": true
					},
					"transform": {
						"legacyDecorator": true,
						"decoratorMetadata": true
					},
					"target": "es2022"
				},
				"module": {
					"type": "commonjs"
				}
			}
		]
	},
	"transformIgnorePatterns": [
		"node_modules/(?!(.pnpm/jose|.pnpm/google-auth-library|jose|google-auth-library)/)"
	],
	"moduleNameMapper": {
		"^@/(.*)$": "<rootDir>/../src/$1",
		"^(\\.{1,2}/.*)\\.js$": "$1",
		"^jose$": "<rootDir>/mocks/jose.mock.ts"
	}
}
