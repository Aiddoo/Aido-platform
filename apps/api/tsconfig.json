{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@aido/typescript-config/nestjs.json",
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS",
			"moduleResolution": "Node"
		}
	},
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": ["node", "jest"]
	},
	"include": ["src/**/*", "test/**/*"],
	"exclude": ["node_modules", "dist"]
}
