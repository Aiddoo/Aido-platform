{
	"name": "@aido/api",
	"version": "0.0.1",
	"private": true,
	"description": "Aido API Server",
	"license": "MIT",
	"author": "dydals3440",
	"scripts": {
		"build": "nest build",
		"clean": "rm -rf dist coverage tsconfig.tsbuildinfo",
		"dev": "rm -f *.tsbuildinfo && nest start --watch",
		"format": "biome format --write src/",
		"lint": "biome check src/",
		"lint:fix": "biome check --write src/",
		"prisma:generate": "prisma generate",
		"prisma:migrate": "prisma migrate dev",
		"prisma:push": "prisma db push",
		"prisma:studio": "prisma studio",
		"start": "nest start",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"test": "jest",
		"test:all": "pnpm test && pnpm test:integration && pnpm test:e2e",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"test:integration": "jest --config ./test/jest-integration.json",
		"test:watch": "jest --watch",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@aido/utils": "workspace:*",
		"@aido/validators": "workspace:*",
		"@nestjs/common": "^11.0.1",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.0.1",
		"@nestjs/jwt": "^11.0.2",
		"@nestjs/passport": "^11.0.5",
		"@nestjs/platform-express": "^11.0.1",
		"@nestjs/swagger": "^11.2.5",
		"@nestjs/terminus": "^11.0.0",
		"@nestjs/throttler": "^6.5.0",
		"@prisma/adapter-pg": "^7.2.0",
		"@prisma/client": "^7.2.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.3",
		"helmet": "^8.1.0",
		"nestjs-pino": "^4.5.0",
		"nestjs-zod": "^5.1.1",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"pino": "^10.2.0",
		"pino-pretty": "^13.1.3",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.1",
		"swagger-ui-express": "^5.0.1",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@aido/jest-config": "workspace:*",
		"@aido/typescript-config": "workspace:*",
		"@golevelup/ts-jest": "^1.2.0",
		"@nestjs/cli": "^11.0.0",
		"@nestjs/schematics": "^11.0.0",
		"@nestjs/testing": "^11.0.1",
		"@swc/cli": "^0.7.9",
		"@swc/core": "^1.15.8",
		"@swc/jest": "^0.2.39",
		"@testcontainers/postgresql": "^10.13.2",
		"@types/express": "^5.0.6",
		"@types/jest": "^30.0.0",
		"@types/node": "^22.10.7",
		"@types/passport-jwt": "^4.0.1",
		"@types/passport-local": "^1.0.38",
		"@types/supertest": "^6.0.2",
		"jest": "catalog:",
		"prisma": "^7.2.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"testcontainers": "^10.13.2",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.7.3"
	}
}
