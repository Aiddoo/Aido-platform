# ══════════════════════════════════════════════════════════════════════════════
# Aido API - Environment Template
# ══════════════════════════════════════════════════════════════════════════════
#
# 설정 방법:
#   개발: cp .env.example .env
#   배포: cp .env.example .env.production (값 수정 필수)
#
# ══════════════════════════════════════════════════════════════════════════════


# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ Core                                                                        │
# └─────────────────────────────────────────────────────────────────────────────┘

NODE_ENV=development
PORT=8080


# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ Database (PostgreSQL)                                                       │
# └─────────────────────────────────────────────────────────────────────────────┘
# 개발: pnpm docker:up → localhost:5432
# 배포: Supabase, Neon, Railway 등

DATABASE_URL=postgresql://postgres:postgres@localhost:5432/aido_dev?schema=public


# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ Authentication (JWT)                                                        │
# └─────────────────────────────────────────────────────────────────────────────┘
# 시크릿 생성: openssl rand -base64 48

JWT_SECRET=your-jwt-secret-minimum-32-characters
JWT_REFRESH_SECRET=your-refresh-secret-minimum-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d


# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ Email (Resend)                                                              │
# └─────────────────────────────────────────────────────────────────────────────┘
# 개발: 비워두면 콘솔 출력
# 배포: https://resend.com/api-keys

RESEND_API_KEY=
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME=Aido


# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ Security                                                                    │
# └─────────────────────────────────────────────────────────────────────────────┘

CORS_ORIGINS=http://localhost:3000,http://localhost:8081
THROTTLE_TTL=60000
THROTTLE_LIMIT=100


# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ OAuth (선택사항)                                                              │
# └─────────────────────────────────────────────────────────────────────────────┘

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=
KAKAO_CLIENT_ID=
KAKAO_CLIENT_SECRET=
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=


# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ External Services (선택사항)                                                  │
# └─────────────────────────────────────────────────────────────────────────────┘

EXPO_ACCESS_TOKEN=
REVENUECAT_API_KEY=
REDIS_URL=
SENTRY_DSN=
